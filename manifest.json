{
  "manifest_version": 3,
  "name": "Disable Youtube Shorts - No Shorts",
  "description": "Disable youtube shorts from showing up in your feed and search results.",
  "version": "1.2",
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "js/content-script.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ]
}